<#include "admin/common/frame.html">
<link rel="stylesheet" type="text/css" href="${base}/res/bhecms/css/articleManage.css">
<link rel="stylesheet" type="text/css" href="${base}/res/common/jqpagination/css/jqpagination.css">

<@frame>
<div class="welcom">
	<div class="artLocation">您当前的位置：导航栏>导航栏内容管理</div>
	<div class="wel_content">
		<div class="navigation">
			<div class="navigationUl">
				<label class="navLabel">导航栏：</label>
				<ul>
					<li>首页</li>
					<li>企业概况</li>
					<li>保洁承包</li>
					<li>解决方案</li>
				</ul>
			</div>
			<div class="clear"></div>
			<div class="contentManagement">
				<div class="content01">
					<table width="100%" border="1" cellspacing="0" cellpadding="0" class="art_table">
						<tr>
							<th width="5%"><input type="checkbox" class="js-chooseAll" /></th>
							<th width="10%">ID</th>
							<th>导航栏名称</th>
							<th>标题</th>
							<th width="25%">创建时间</th>
							<th width="25%">操作</th>
						</tr>
						<#list data as entity>
							<tr>
								<td>${entity.namecn}</td>
								<td>${entity.id}</td>
								<td>
									<#if (entity.createtime)??>
				        				${entity.createtime ? string("yyyy-MM-dd HH:mm:ss")}
					        		</#if>
								</td>
								<td>
									<a href="javascript:void(0)" >修改</a> | 
									<a href="javascript:void(0)" >删除</a>
								</td>
							</tr>
						</#list>
					</table>


				</div>
				<div class="content01">
					<table width="100%" border="1" cellspacing="0" cellpadding="0"
						class="art_table">
						<tr>
							<th width="5%"><input type="checkbox" class="js-chooseAll" /></th>
							<th width="10%">ID</th>
							<th>子导航栏</th>
							<th>分类</th>
							<th width="25%">修改时间</th>
							<th width="25%">操作</th>
						</tr>

						<tr>
							<td width="35"><input type="checkbox" class="js-chooseInput"
								uid="${entity.uuid}" /></td>
							<td><a href="#">1</a></td>
							<td>公司介绍</td>
							<td>关于我们</td>
							<td>2015-08-10</td>
							<td><a href="articleRelease.html?uuid=${entity.uuid}">修改</a>
								| <a href="javascript:void(0)" class="js-updateStatus"
								uid="${entity.uuid}">删除</a></td>
						</tr>
					</table>
					<div class="left mar27">
						<input type="checkbox" /> <a href="#">全选</a>
					</div>

				</div>
				<div class="content01">
					<table width="100%" border="1" cellspacing="0" cellpadding="0"
						class="art_table">
						<tr>
							<th width="5%"><input type="checkbox" class="js-chooseAll" /></th>
							<th width="10%">ID</th>
							<th>左侧导航栏</th>
							<th>分类</th>
							<th width="25%">修改时间</th>
							<th width="25%">操作</th>
						</tr>

						<tr>
							<td width="35"><input type="checkbox" class="js-chooseInput"
								uid="${entity.uuid}" /></td>
							<td><a href="#">1</a></td>
							<td>内容管理</td>
							<td>关于我们</td>
							<td>2015-08-10</td>
							<td><a href="articleRelease.html?uuid=${entity.uuid}">修改</a>
								| <a href="javascript:void(0)" class="js-updateStatus"
								uid="${entity.uuid}">删除</a></td>
						</tr>
					</table>
				</div>
				<div class="content01">
					<table width="100%" border="1" cellspacing="0" cellpadding="0"
						class="art_table">
						<tr>
							<th width="5%"><input type="checkbox" class="js-chooseAll" /></th>
							<th width="10%">ID</th>
							<th>左侧导航栏</th>
							<th>分类</th>
							<th width="25%">修改时间</th>
							<th width="25%">操作</th>
						</tr>

						<tr>
							<td width="35"><input type="checkbox" class="js-chooseInput"
								uid="${entity.uuid}" /></td>
							<td><a href="#">1</a></td>
							<td>内容管理</td>
							<td>关于我们</td>
							<td>2015-08-10</td>
							<td><a href="articleRelease.html?uuid=${entity.uuid}">修改</a>
								| <a href="javascript:void(0)" class="js-updateStatus"
								uid="${entity.uuid}">删除</a></td>
						</tr>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
</@frame>

<script>
	$(document).ready(
			function() {
				$(".contentManagement>.content01:not(:first-child)").hide();
				$('.navigationUl ul li').click(
						function() {
							$(this).addClass('art_on').siblings().removeClass( 'art_on');
							$( '.contentManagement>div:eq(' + $(this).index() + ')').show() .siblings().hide();
						});

				$(".navigationUl ul li:first-child").addClass("art_on");

			});
</script>