<#-- 文章模板-->
<#macro contentTmp contt>
	<div>${contt.title}</div>
	<div>${contt.shortTitle[0..15]}</div>
	
	<div>
	<span>时间:${contt.dateTimeStr}</span>
	<span>消息来源:${contt.whereFrom}</span>
	<span>点击:${contt.hits}</span>
	</div>
	
	<div>
	${contt.content}
	</div>

	<div>
		作者：${contt.editer}
		编辑：${contt.upEditer}
	</div>

</#macro>